        </dependency>
        <dependency>
            <groupId>com.ihomziak.bankingapp.common</groupId>
            <artifactId>bankingapp-common</artifactId>
            <version>1.0-SNAPSHOT</version>
        </dependency>
        <dependency>
            <groupId>com.h2database</groupId>
